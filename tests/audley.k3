package Audley.Db is

record Term is
   key Tag    : String (32);
end Term;

record Word is
   key Text : String (32);
   key Term;
end Word;

record Label is
   key Term;
   Text : String (1024);
end Label;

record Member is
   key Collection : Term;
   key Term;
   --  unique key Term_And_Collection is Term, Collection;
   --  unique key Collection_And_Term is Collection, Term;
end Member;

record Subset is
   key Superset : Term;
   key Subset   : Term;
   --  unique key Subset_And_Superset is Subset, Superset;
   --  unique key Superset_And_Subset is Superset, Subset;
end Subset;

record Property is
   key Term;
   key Property : Term;
   key Value : Term;
   --  key Term_Property is Term, Property;
end Property;

record Search is
   key Search_Term : String (32);
   Term;
   --  unique key Term_And_Search_Term is Term, Search_Term;
end Search;

end Audley.Db;
