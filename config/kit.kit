package Kit.Db is

   record Kit_Root_Record is
      key Top_Record : Record_Type is Readable;
   end Kit_Root_Record;

   record Kit_Named_Item is
      key Name : String (64);
   end Kit_Named_Item;

   record Kit_Record : Kit_Named_Item is
      Record_Length : Natural;
   end Kit_Record;

   record Kit_Record_Base is
      key Base : Kit_Record;
      key Derived : Kit_Record;
      key Base_Record with Base, Derived;
   end Kit_Record_Base;

   record Kit_Type : Kit_Named_Item is
      Size : Natural;
   end Kit_Type;

   record Kit_Integer : Kit_Type is
      Low  : Integer;
      High : Integer;
   end Kit_Integer;

   record Kit_Float : Kit_Type;

   record Kit_Long_Float : Kit_Type;

   record Kit_Reference : Kit_Type is
      Reference : Kit_Record;
   end Kit_Reference;

   record Kit_String : Kit_Type is
      Length : Natural;
   end Kit_String;

   record Kit_Enumeration : Kit_Type;

   record Kit_Literal : Kit_Named_Item is
      key Kit_Enumeration;
      key Value : Natural;
      unique key Enum_Value with Kit_Enumeration, Value;
   end Kit_Literal;

   record Kit_Field : Kit_Named_Item is
      key Kit_Record;
      Field_Type   : Kit_Type;
      Field_Offset : Natural;
      Field_Length : Natural;
   end Kit_Field;

   record Kit_Key is
      Is_Unique : Boolean;
   end Kit_Key;

   record Kit_Key_Field is
      key Kit_Key;
      key Kit_Field;
      unique key Key_Field with Kit_Key, Kit_Field;
   end Kit_Key_Field;

end Kit.Db;
