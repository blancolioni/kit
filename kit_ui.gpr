with "xml";
with "marlowe";
with "gcs";
with "wlib";
with "leander";
with "gtkada";

project Kit_UI is

   for Source_Dirs use ("src", "src/server", "src/server/generated", "src/ui");
   for Object_Dir use "build/obj";
   for Exec_Dir use "build/bin";
   for Main use ("kit-ui-driver");

   package Builder is
      for Default_Switches ("ada") use ("-k", "-s", "-g");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-gnatwae", "-gnatyabcefhiklmnoprst", "-gnat2012", "-gnata");
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

end Kit_UI;

